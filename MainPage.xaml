<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GregOverlay.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GregOverlay"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Transparent">
        <!-- Render the web overlay in a WebView control.  The HTML uses Socket.IO to talk to the server. -->
        <WebView x:Name="OverlayWebView"
                 Source="ms-appx-web:///Assets/index.html"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 Margin="0" />
    </Grid>
</Page>